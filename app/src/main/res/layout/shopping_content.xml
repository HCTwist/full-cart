<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin">

    <View
        android:id="@+id/list_content_progress_dot"
        android:layout_width="@dimen/list_progress_dot_width"
        android:layout_height="@dimen/list_progress_dot_width"
        android:background="@drawable/dot_donut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_content_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/list_content_progress_dot_filled"
        android:layout_width="@dimen/list_progress_dot_width"
        android:layout_height="@dimen/list_progress_dot_width"
        android:background="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/list_content_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_content_tick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/list_tick_padding"
        android:src="@drawable/outline_done_24"
        app:layout_constraintBottom_toBottomOf="@id/list_content_progress_dot"
        app:layout_constraintEnd_toEndOf="@id/list_content_progress_dot"
        app:layout_constraintStart_toStartOf="@id/list_content_progress_dot"
        app:layout_constraintTop_toTopOf="@id/list_content_progress_dot"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_content_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_content_progress_dot"
        app:layout_constraintTop_toTopOf="parent">

        <com.twisthenry8gmail.fullcart.ContentTextSwitcher
            android:id="@+id/list_content_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            app:layout_constraintBottom_toTopOf="@id/list_content_extra"
            app:layout_constraintEnd_toStartOf="@id/list_content_pantry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textViewLayout="@layout/content_main_view" />

        <com.twisthenry8gmail.fullcart.ContentTextSwitcher
            android:id="@+id/list_content_extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/list_content_pantry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_content_main"
            app:textViewLayout="@layout/content_extra_view" />

        <ImageButton
            android:id="@+id/list_content_remove"
            android:layout_width="@dimen/list_action_size"
            android:layout_height="@dimen/list_action_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shopping_remove_cd"
            android:padding="@dimen/list_action_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/outline_remove_circle_outline_24"
            android:tint="@color/body_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/list_content_pantry"
            android:layout_width="@dimen/list_action_size"
            android:layout_height="@dimen/list_action_size"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shopping_transfer_cd"
            android:padding="@dimen/list_action_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/outline_arrow_forward_24"
            android:tint="@color/body_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>