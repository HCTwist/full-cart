<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:background="@drawable/basket_background"
        android:ellipsize="end"
        android:fontFamily="@font/librefranklin_regular"
        android:maxLines="1"
        android:paddingStart="@dimen/xl_margin"
        android:paddingTop="@dimen/basket_header_padding_top"
        android:paddingEnd="@dimen/xl_margin"
        android:paddingBottom="@dimen/basket_header_padding_top"
        android:text="@string/shopping_basket_header"
        android:textColor="@android:color/white"
        android:textSize="@dimen/medium_font"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
