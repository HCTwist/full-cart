<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/categories_spinner_list_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/category_row_dot"
        android:layout_width="@dimen/categories_dot_width_spinner"
        android:layout_height="@dimen/categories_dot_width_spinner"
        android:layout_gravity="center_vertical"
        android:background="@drawable/color_picker_dot"
        android:contentDescription="@string/category_color_cd" />

    <TextView
        android:id="@+id/category_row_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/body" />

</LinearLayout>